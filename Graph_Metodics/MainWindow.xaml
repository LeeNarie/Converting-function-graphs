                                                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                                        <GradientStop Color="#FFD5E7FF" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </TabItem.Background>
                                                <Grid Background="#FFD5E7FF"/>
                                            </TabItem>

