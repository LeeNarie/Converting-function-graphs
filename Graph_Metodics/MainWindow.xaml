                            <Grid x:Name="grid1" Width="500" Height="500" Margin="10,10,18.8,13.2" PreviewMouseMove="Graph1_MouseMove" MouseMove="Graph1_MouseMove" MouseWheel="Graph1_MouseWheel" VerticalAlignment="Center" Background="White" >

